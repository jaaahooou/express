doctype html
//- deklarujemy, że będziemy używali mixin, potem nadajemy mu nazwę (jest to funckja)
mixin item(title,url)
  li
    a(href=url class=path == url?'active': '')=title
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
  
    ul 
      +item('Strona główna','/') 
      +item('Aktualności','/news') 
      +item('Quiz','/quiz') 
      +item('Panel Administratora','/admin') 

    block content
